
<h1 class="text-center mt-3">My flats</h1>
<ul class="list-group">
  <% @flats.each do |flat| %>
    <li class="list-group-item m-1 p-0">
      <div class="d-flex flex-wrap justify-content-start w-100">
        <div class="">
          <%= cl_image_tag flat.photos.first.key, style: "height:100px; width:100px;" %>
        </div>
        <div class="p-2 flex-grow-1">
          <div class="d-flex flex-column justify-content-center px-0 mx-1">
              <h2 class="m-0"><%= link_to flat.name, flat_path(flat), class:"link-primary text-decoration-none" %></h2>
              <p class="m-0"> <strong>Price:</strong> <%=flat.price%> â‚¬ per night</p>
            </div>
        </div>
        <div class="d-flex flex-column justify-content-center ml-auto mx-2">
            <%= link_to "Edit",  edit_flat_path(flat), class: "btn btn-warning m-1"  %>
            <%= link_to "Delete",
              flat_path(flat),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
              class: "btn btn-danger m-1"
            %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
