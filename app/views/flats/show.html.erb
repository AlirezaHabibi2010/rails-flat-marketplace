  <div class="container my-3">
  <div class="row p-0 m-0">
    <div class="col-12 col-md-6">
      <div class="d-flex align-items-start flex-column align-items-stretch">
        <div class="border border-3 rounded-end p-3">
          <%= render "flats/gallery", flat: @flat%>
        </div>
        <div class="d-flex justify-content-around  flex-wrap border border-3 rounded-end p-3">
          <div class="p-0"><%= @flat.price %> â‚¬ per night</div>
          <div class="p-0"><%= @flat.address %></div>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-6 border border-3 rounded-end p-3 d-flex justify-content-between  flex-column">
      <h1><%= @flat.name %></h1>
      <div>
        <h4 class="card-title">Description:</h4>
        <p class="text-left"><%= @flat.description %></p>
      </div>
      <hr>
      <div>
        <h4>Details:</h4>
        <p><strong>Owner: </strong><%= @flat.user.first_name+ " " + @flat.user.last_name %></p>
      </div>
      <div>
<div id='flat-booking-dates' data-unavailable="<%= @flat.unavailable_dates.to_json %>">
       <%= simple_form_for([@flat, @booking], data: { controller: 'flatpickr' }) do |f| %>
        <%= f.input :start_date,  label: 'CHECK-IN' , as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
        <%= f.input :end_date,  label: 'CHECK-OUT' , as: :string, input_html: { data: { flatpickr_target: "endTime" } ,id: 'endtime'} %>
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      <% end %>
 </div>
      </div>
    </div>

    <div class="col-12 border border-top-0 border-3 rounded-end p-3 d-flex justify-content-between  flex-column">
       <h4 class="">Booking requests for this flat</h4>
        <ol class="list-group list-group-horizontal flex-fill">
          <% @flat.bookings.where({declined: false}).where('end_date >= ?', Date.today).order(:start_date).each do |booking| %>
            <li class=" list-group-item d-flex justify-content-between flex-wrap
              <%= booking.confirmed_by_owner ? "list-group-item-success" : "list-group-item-warning" %>
              ">
              <div class="m-0 p-0">
                <strong>From:</strong><%= booking.start_date%><br>
                <strong>to:</strong> <%= booking.end_date %>
              </div>
              <div class="p-1">
              </div>
              <div class="m-0 p-0">
                By: <%= booking.user.first_name %> <br>
                <%= booking.confirmed_by_owner ? "Confirmed" : "pending" %>
              </div>
            </li>
          <%end%>
        </ol>
    </div>
  </div>
</div>
