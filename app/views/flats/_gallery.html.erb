<div id="flat-<%=flat.id%>" class="carousel slide" data-bs-ride="true">
  <div class="carousel-indicators">
    <%  flat.photos.each_with_index do |photo, index| %>
       <button type="button"  data-bs-target="#flat-<%=flat.id%>" data-bs-slide-to="<%=index%>" class="<%= index == 0 ? 'active' : '' %>"aria-current="true" aria-label="Slide <%=index%>"></button>
    <% end %>
  </div>
  <div class="carousel-inner">
    <%  flat.photos.each_with_index do |photo, index| %>

      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
          <%= cl_image_tag photo.key, class:"d-block rounded-top", style: "width:100%; aspect-ratio: 16 / 9;", crop: :fill%>
      </div>

    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#flat-<%=flat.id%>" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#flat-<%=flat.id%>" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
