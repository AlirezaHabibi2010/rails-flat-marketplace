<h1>All My Booking Requests</h1>
<ul class="list-group align-middle">
  <% @bookings.each do |booking| %>
    <li class="list-group-item d-flex justify-content-between m-1">
      <div>
        <%= link_to booking.flat.name, flat_path(booking.flat) %>
        <br>
        <strong>From:</strong> <%= booking.start_date %>
        , <strong>To:</strong> <%= booking.end_date %>
      </div>

      <div>
          <%= link_to "Delete",
            booking_path(booking),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class: "btn btn-danger"
          %>
          <%= link_to "edit",edit_booking_path(booking), class: "btn btn-warning" %>
        <br>
      </div>
    </li>
  <% end %>
</ul>
